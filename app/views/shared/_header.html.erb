<div class="header-position">
  <header>
    <div class="header-inner">
      <div>
        <h2 class="header-logo">RECORDI</h2>
        <%= link_to 'calendar', memories_path, class: 'header-link' %>
        <%= link_to 'chart', compare_memories_path, class: 'header-link' %>
        <%= link_to 'memory', all_memories_path, class: 'header-link' %>
        <%= link_to 'new memory', new_memory_path, class: 'header-link' %>
        <%= link_to 'post', posts_path, class: 'header-link' %>
      </div>

      <div class="icons">
        <a class="icon-link set-icon" href="/users/setting">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-gear-fill" viewBox="0 0 16 16">
            <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z"/>
          </svg>
        </a>

        <div class='dropdown user-icon'>
          <%= link_to '#', class: "d-block link-body-emphasis text-decoration-none show", data: { bs_toggle: 'dropdown' }, aria: { expanded: 'true' } do %>
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar, class: "rounded-circle", alt: "mdo", width: '45', height: '45'  %>
            <% else %>
              <%= image_tag "icon.png", class: "rounded-circle", width: '45', height: '45' %>
            <% end %>
          <% end %>
          <div class='dropdown-menu'>
            <div class='dropdown-item'><%= current_user.name %></div>
            <div class='dropdown-divider'></div>
            <%= link_to "マイページ", users_profile_path, class: "dropdown-item" %>
            <%= link_to 'ログアウト', destroy_user_session_path, class: "dropdown-item", method: :delete  %>
          </div>
        </div>
      </div>
    </div>
  </header>
</div>