<% if current_user.already_favorited?(post) %>
  <%= link_to post_favorites_path(post), data: { "turbo-method": :delete }, class: "no-underline" do %>
    <i class="fas fa-heart" style="color: red;"></i>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), data: { "turbo-method": :post }, class: "no-underline" do %>
    <i class="far fa-heart" style="color: red;"></i>
  <% end %>
<% end %>
<%= post.favorites.count %>