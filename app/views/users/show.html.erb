<div class="container">
  <h1 class="mb-3 mt-4">プロフィール</h1>
  <section class="text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: "rounded-circle pf-bottom avatar-size" %>
        <% else %>
          <%= image_tag "icon.png", class: "rounded-circle pf-bottom avatar-size" %>
        <% end %>

        <div class="pf-bottom">
          <h1><%= @user.name %></h1>
        </div>

        <div class="pf-bottom-2">
          <h2><%= @user.email %></h2>
        </div>

        <div class="pf-bottom-3">
          <%= link_to 'プロフィールを編集', edit_user_registration_path, class: 'btn btn-primary' %>
        </div>

        <div>
          <% if @user.avatar.attached? %>
            <%= button_to 'アバター画像を削除', delete_avatar_path(@user), method: :delete, class: 'btn btn-danger' %>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <section class="text-center container mt-3 border-top border-success">
    <div class="row py-lg-3">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light mt-3"><%= current_user.name %>のポスト</h1>
      </div>
    </div>
  </section>

  <% if @tag_list.present? %>
    <div class="dropdown mb-4">
      <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tag" viewBox="0 0 16 16">
          <path d="M6 4.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m-1 0a.5.5 0 1 0-1 0 .5.5 0 0 0 1 0"/>
          <path d="M2 1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 1 6.586V2a1 1 0 0 1 1-1m0 5.586 7 7L13.586 9l-7-7H2z"/>
        </svg>
        タグリスト
      </button>

      <div class="dropdown-menu text-body-secondary" style="max-width: 100%;">
        <div class="tag-container ms-3">
          <% @tag_list.each do |tag|%>
            <div class="tag me-3">
              <i class="bi bi-tag-fill"></i>
              <%= link_to tag.name, search_mypost_tag_posts_path(post_tag_id: tag.id) %>
              <%= "(#{tag.posts.where(user_id: current_user.id).count})" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row row-cols-1 row-cols-md-3">
    <% if @posts.present? %>
      <%= render "my_post", posts: @posts %>
    <% else %>
      <div class="mb-3">
        <h1>ポストがありません</h1>
      </div>
    <% end %>
  </div>
</div>