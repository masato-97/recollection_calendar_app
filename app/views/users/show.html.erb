<h1>プロフィール</h1>

<% if @user.avatar.attached? %>
  <%= image_tag @user.avatar, class: "rounded-circle", alt: "mdo", width: '100', height: '100'  %>
<% else %>
  <%= image_tag "icon.jpg", class: "rounded-circle", alt: "mdo", width: '100', height: '100' %>
<% end %>

<h3>ユーザー名</h3>
<%= @user.name %>

<h3>メールアドレス</h3>
<%= @user.email %>

<div>
  <%= link_to 'プロフィール編集', edit_user_registration_path, class: 'btn btn-primary' %>
</div>