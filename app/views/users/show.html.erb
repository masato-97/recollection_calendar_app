<div class="container">
  <h1 class="mb-3 mt-4">プロフィール</h1>
  <section class="text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: "rounded-circle pf-bottom avatar-size" %>
        <% else %>
          <%= image_tag "icon.png", class: "rounded-circle pf-bottom avatar-size" %>
        <% end %>

        <div class="pf-bottom">
          <h1><%= @user.name %></h1>
        </div>

        <div class="pf-bottom-2">
          <h2><%= @user.email %></h2>
        </div>

        <div class="pf-bottom-3">
          <%= link_to 'プロフィールを編集', edit_user_registration_path, class: 'btn btn-primary' %>
        </div>

        <div>
          <% if @user.avatar.attached? %>
            <%= button_to 'アバター画像を削除', delete_avatar_path(@user), method: :delete, class: 'btn btn-danger' %>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <section class="text-center container mt-3 border-top border-success">
    <div class="row py-lg-3">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light mt-3"><%= current_user.name %>のポスト</h1>
      </div>
    </div>
  </section>

  <% if @tag_list.present? %>
    タグリスト
    <div class="tag-container mb-4">
      <% @tag_list.each do |tag|%>
        <div class="tag">
          <i class="fa-sharp fa-solid fa-tag"></i>
          <%= link_to tag.name, search_mypost_tag_posts_path(post_tag_id: tag.id) %>
          <%= "(#{tag.posts.where(user_id: current_user.id).count})" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="row row-cols-1 row-cols-md-3">
    <% if @posts.present? %>
      <%= render "my_post", posts: @posts %>
    <% else %>
      <div class="mb-3">
        <h1>ポストがありません</h1>
      </div>
    <% end %>
  </div>
</div>