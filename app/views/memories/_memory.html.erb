<div class="col">
  <div id="memory-id-<%= memory.id %>">
    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative memory-coloe">
      <div class="col p-4 d-flex flex-column position-static">
        <h3 class="mb-1">
          <%= link_to memory.title, memory_path(memory), class: "no-underline" %>
        </h3>

        <% if memory.score.present? %>
          <div class="content average-score mb-2">
            <div class="star-rating mb-2">
              <div class="star-rating-front" style="width: <%= memory.score * 20 %>%">★★★★★</div>
              <div class="star-rating-back">★★★★★</div>
            </div>
            <div class="average-score-display ml-3 pt-2">
              <%= memory.score %>/5
            </div>
          </div>
        <% end %>

        <div class="card-text mb-auto">
          <%= memory.body.truncate(43) %>
        </div>

        <% if memory.tags.present? %>
          <div class="tag-container">
            <% memory.tags.first(2).each do |tag| %>
              <div class="tag">
                <i class="fa-sharp fa-solid fa-tag"></i>
                <%= tag.name.truncate(8, omission: '') %>
              </div>
            <% end %>
            <% if memory.tags.size > 2 %>
              ...
            <% end %>
          </div>
        <% end %>

        <div class="day-pencil-trash-inner">
          <div class="text-body-secondary">
            <%= memory.day.strftime("%Y/%m/%d") %>
          </div>

          <div class='ms-auto'>
            <%= link_to edit_memory_path(memory), id: "button-edit-#{memory.id}" do %>
              <i class="bi bi-pencil-fill edit-link"></i>
            <% end %>
          </div>
          <div>
            <%= link_to memory_path(memory), id: "button-delete-#{memory.id}", data: { turbo_method: :delete, turbo_confirm: "削除しますか？" } do %>
              <i class="bi bi-trash-fill edit-link"></i>
            <% end %>
          </div>

          <% if memory.score.present? %>
            <% if memory.post.present? %>
              <div>
                <%= link_to 'ポスト詳細', memory_post_path(memory, memory.post), class: 'btn btn-primary' %>
              </div>
            <% else %>
              <div>
                <%= link_to 'ポスト作成', new_memory_post_path(memory), class: 'btn btn-primary' %>
              </div>
            <% end %>
          <% end %>

        </div>
      </div>
      <div class="col-auto d-none d-lg-block">
        <% if memory.main_image.present? %>
          <%= link_to image_tag(memory.main_image, class: "bd-placeholder-img", width: "250", height: "250", xmlns: "http://www.w3.org/2000/svg", role: "img",  preserveAspectRatio: "xMidYMid slice", focusable: "false"), memory_path(memory) %>
        <% else %>
          <%= link_to image_tag("no_image.png", class: "bd-placeholder-img", width: "250", height: "250", xmlns: "http://www.w3.org/2000/svg", role: "img",  preserveAspectRatio: "xMidYMid slice", focusable: "false"), memory_path(memory) %>
        <% end %>
      </div>
    </div>
  </div>
</div>