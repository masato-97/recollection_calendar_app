<div class="col">
  <div id="memory-id-<%= memory.id %>">
    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
      <div class="col p-4 d-flex flex-column position-static">
        <h3 class="mb-1">
          <%= link_to memory.title, memory_path(memory) %>
        </h3>

        <% if memory.score.present? %>
          <div class="content average-score mb-2">
            <div class="star-rating mb-2">
              <div class="star-rating-front" style="width: <%= memory.score * 20 %>%">★★★★★</div>
              <div class="star-rating-back">★★★★★</div>
            </div>
            <div class="average-score-display ml-3 pt-2">
              <%= memory.score %>/5
            </div>
          </div>
        <% end %>

        <div class="card-text mb-auto">
          <%= memory.body.truncate(43) %>
        </div>

        <div class="day-pencil-trash-inner">
          <div class="text-body-secondary">
            <%= memory.day.strftime("%Y/%m/%d") %>
          </div>

          <div class='ms-auto'>
            <%= link_to edit_memory_path(memory), id: "button-edit-#{memory.id}" do %>
              <i class="bi bi-pencil-fill"></i>
            <% end %>
            <%= link_to memory_path(memory), id: "button-delete-#{memory.id}", data: { turbo_method: :delete, turbo_confirm: "削除しますか？" } do %>
              <i class="bi bi-trash-fill"></i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-auto d-none d-lg-block">
        <%= link_to image_tag(memory.main_image_url, class: "bd-placeholder-img", width: "250", height: "250", xmlns: "http://www.w3.org/2000/svg", role: "img",  preserveAspectRatio: "xMidYMid slice", focusable: "false"), memory_path(memory) %>
      </div>
    </div>
  </div>
</div>