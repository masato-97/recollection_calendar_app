<div class="container">
  <section class="text-center container">
    <div class="row all-memories-title">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">思い出一覧</h1>
      </div>
    </div>
    <div class="mb-3">
      <a class="btn btn-outline-primary" href="<%= compare_memories_path %>" role="button">７ヶ月間の思い出の数を比較</a>
    </div>
  </section>

  <div class="container">
    <div class="col-lg-10 mx-auto">
      <%= render 'memory_search_form', q: @q, url: all_memories_path %>
    </div>
  </div>

  <% if @tag_list.present? %>
    タグリスト
    <div class="tag-container mb-4">
      <% @tag_list.each do |tag|%>
        <div class="tag">
          <i class="fa-sharp fa-solid fa-tag"></i>
          <%= link_to tag.name,search_tag_memories_path(tag_id: tag.id) %>
          <%= "(#{tag.memories.count})" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<div class="container">
  <div class="row row-cols-1 row-cols-md-2">
    <% if @memories.present? %>
      <%= render @memories %>
    <% else %>
      <div class="mb-3">
        <h1>思い出がありません</h1>
      </div>
    <% end %>
  </div>
</div>